{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es7"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "noLib": false,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ]
}
